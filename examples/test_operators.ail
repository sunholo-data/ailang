-- Test arithmetic operators with shim
print("Arithmetic tests:")
print("2 + 3 = " ++ show(2 + 3))
print("10 - 4 = " ++ show(10 - 4))
print("6 * 7 = " ++ show(6 * 7))
print("15 / 3 = " ++ show(15 / 3))
print("17 % 5 = " ++ show(17 % 5))

print("")
print("Comparison tests:")
print("5 == 5 = " ++ show(5 == 5))
print("5 != 3 = " ++ show(5 != 3))
print("3 < 5 = " ++ show(3 < 5))
print("5 > 3 = " ++ show(5 > 3))
print("3 <= 3 = " ++ show(3 <= 3))
print("5 >= 5 = " ++ show(5 >= 5))