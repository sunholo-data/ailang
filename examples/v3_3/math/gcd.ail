-- Math utilities module
module examples/v3_3/math/gcd

-- Greatest common divisor using Euclidean algorithm
-- Export this function for use by other modules
export func gcd(a: int, b: int) -> int {
  if b == 0 then a else gcd(b, a % b)
}

-- Helper function (not exported, starts with underscore)
func _abs(x: int) -> int {
  if x < 0 then -x else x
}

-- Least common multiple (also exported)
export func lcm(a: int, b: int) -> int {
  (_abs(a) * _abs(b)) / gcd(a, b)
}