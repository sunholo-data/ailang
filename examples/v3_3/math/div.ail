-- Division utilities that uses gcd module
module examples/v3_3/math/div

-- Import specific functions from gcd module
import examples/v3_3/math/gcd (gcd, lcm)

-- Check if two numbers are coprime
export func coprime(a: int, b: int) -> bool {
  gcd(a, b) == 1
}

-- Simplify numerator (for testing)
export func simplifyNum(num: int, den: int) -> int {
  num / gcd(num, den)
}

-- Simplify denominator (for testing)
export func simplifyDen(num: int, den: int) -> int {
  den / gcd(num, den)
}