-- REPL Test Suite
-- Tests all working features in the AILANG REPL

-- Basic Arithmetic (should default to Int)
1 + 2
10 - 5
3 * 4
20 / 4

-- Float Arithmetic (should default to Float) 
3.14 * 2.0
10.5 / 2.1
1.1 + 2.2

-- String Operations
"Hello " ++ "World"
"AILANG " ++ "v2.3"

-- Boolean Operations
true && false
true || false
5 > 3
10 == 10
"hello" == "hello"

-- Lists
[1, 2, 3]
[1.0, 2.0, 3.0]
["a", "b", "c"]

-- Records
{name: "Alice", age: 30}
{x: 10, y: 20}
{title: "AILANG", version: "2.3", ready: true}

-- Let Bindings
let x = 5 in x * 2
let name = "AILANG" in "Hello " ++ name

-- Lambda Expressions
(\x. x + 1)(5)
let double = \x. x * 2 in double(21)
let add = \x y. x + y in add(10)(20)

-- Conditionals
if 5 > 3 then "yes" else "no"
if false then 1 else 2

-- Type Class Examples
let id = \x. x in id(42)
let const = \x y. x in const(1)(2)

-- Mixed Types in Records
{int_val: 42, float_val: 3.14, str_val: "test", bool_val: true}

-- Nested Structures
{point: {x: 1, y: 2}, label: "origin"}
[[1, 2], [3, 4]]